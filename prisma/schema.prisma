generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// generate schema

enum ProductCategory {
  MOBILE
  LAPTOP
  WATCH
  OTHERS
}

// create model
model Product {
  id          Int             @id @default(autoincrement())
  name        String
  category    ProductCategory
  description String?
  price       Float?          @default(0.0)
  quantity    Int?            @default(0)
  // image
}

